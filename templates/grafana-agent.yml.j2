server:
  log_level: info

metrics:
  global:
    scrape_interval: 1m
    remote_write:
      - url: {{ prometheus_url }}

integrations:
  node_exporter:
    enabled: true

logs:
  configs:
  - name: default
    positions:
      filename: /tmp/positions.yaml
    scrape_configs:
      - job_name: varlogs
        static_configs:
          - targets: [localhost]
            labels:
              job: varlogs
              __path__: /var/log/*log
    clients:
      - url: {{ loki_url }}
